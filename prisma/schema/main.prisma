generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

enum Role {
    USER
    ADMIN
}

enum OrderStatus {
    JUST_ORDERED
    IN_PROCESS
    PARTIALLY_SHIPPED
    SHIPPED
    FULFILLED
    CANCELLED
    REFUNDED
}

enum OrderedItemStatus {
    JUST_ORDERED
    IN_PROCESS
    SHIPPED
    FULFILLED
    CANCELLED
    REFUNDED
}
